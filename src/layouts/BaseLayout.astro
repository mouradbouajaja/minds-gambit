---
interface Props {
  title?: string;
  description?: string;
}
const { title = "Mourad Bouajaja — The Mind's Gambit", description = "Chess, Madness, and the Battle for the Mind — a book in ten chapters" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="author" content="Mourad Bouajaja">
    <meta name="google-site-verification" content="rSAnHjPa8O5rHn6IUEK2yWJhZHay3Fo5LqZaZw43FvI" />
    <title>{title}</title>
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#0f1117">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content="https://mindsgambit.com/images/og-share.jpg">
    <meta property="og:url" content="https://mindsgambit.com">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="The Mind's Gambit">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content="https://mindsgambit.com/images/og-share.jpg">

    <!-- Canonical URL -->
    <link rel="canonical" href="https://mindsgambit.com">

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Book",
      "name": "The Mind's Gambit",
      "alternateName": "Chess, Madness, and the Battle for the Mind",
      "author": {
        "@type": "Person",
        "name": "Mourad Bouajaja"
      },
      "description": "Chess, Madness, and the Battle for the Mind",
      "url": "https://mindsgambit.com",
      "image": "https://mindsgambit.com/images/og-share.jpg",
      "genre": ["Psychology", "Chess", "Philosophy"],
      "inLanguage": "en",
      "publisher": {
        "@type": "Organization",
        "name": "The Mind's Gambit",
        "url": "https://mindsgambit.com"
      }
    }
    </script>

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link rel="stylesheet" href="/styles/global.css">
    <script async crossorigin="anonymous" data-clerk-publishable-key="pk_live_Y2xlcmsubWluZHNnYW1iaXQuY29tJA" src="https://clerk.mindsgambit.com/npm/@clerk/clerk-js@latest/dist/clerk.browser.js" type="text/javascript"></script>
  </head>
  <body>
    <slot />
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
  </body>
</html>
